<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CajeroMovil.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CajeroMovil.MVVM.Views"
    Shell.FlyoutBehavior="Disabled"
    >

    <ShellContent
        Title="Cajero Movil"
        ContentTemplate="{DataTemplate local:Login}"
        Route="LoginPage" />

    <TabBar Route="mainMenu">
        <Tab Title="Escanear">
            <ShellContent Route="ScanPage" ContentTemplate="{DataTemplate local:ScanPage}" />
        </Tab>
        <Tab Title="Lista">
            <ShellContent Route="ListaPage" ContentTemplate="{DataTemplate local:ListaPage}" />
        </Tab>
        <Tab Title="Contacto">
            <ShellContent Route="ContactoPage" ContentTemplate="{DataTemplate local:ContactoPage}" />
        </Tab>
    </TabBar>


</Shell>
